<p id="notice"><%= notice %></p>

<h1>Listing Address Favorites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @address_favorites.each do |address_favorite| %>
      <tr>
        <td><%= address_favorite.name %></td>
        <td><%= address_favorite.user %></td>
        <td><%= address_favorite.address %></td>
        <td><%= link_to 'Show', address_favorite %></td>
        <td><%= link_to 'Edit', edit_address_favorite_path(address_favorite) %></td>
        <td><%= link_to 'Destroy', address_favorite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

