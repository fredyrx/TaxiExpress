



        <div class="row text-center  ">
            <div class="col-md-12">
                <br><br>
                <h2> <%= @dashboard %> : Register</h2>
               
                <h5>( Register yourself to get access )</h5>
                 <br>
            </div>
        </div>
         <div class="row">
             
               <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                        <strong>  New User ? Register Yourself </strong>  
                            </div>
                            <div class="panel-body">
                                <form role="form">
<br>
                                        <div class="form-group input-group">
                                           
                                              <span class="input-group-addon"><i class="fa fa-circle-o-notch"></i></span>
                                             <%= f.text_field :name, required: true, autofocus: true , class:"form-control" , placeholder:"Your Name"%>
                                        </div>
                                        
                                        <div class="form-group input-group">
                                           
                                            <span class="input-group-addon"><i class="fa fa-circle-o-notch"></i></span>
                                             <%= f.text_field :last_name, required: true, autofocus: true , class:"form-control" , placeholder:"Your Last Name"%>
                                        </div>
                                        
                                        <div class="form-group input-group">
                                           
                                             <span class="input-group-addon">@</span>
                                             <%= f.email_field :email, required: true, autofocus: true , class:"form-control" , placeholder:"Your email"%>
                                        </div>
                                   
                                         <div class="form-group input-group">
                                            
                                            
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <%= f.password_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) , class:"form-control", placeholder:"Your password"%>
                                        </div>
                                      <div class="form-group input-group">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                           
                                            <%= f.password_field :password_confirmation, required: true , class:"form-control", placeholder:"Repeat password"%>
                                        </div>
                                     
                                     <!--campo oculto para ponerle el valor de tipo usuario -->
                                      <%= f.hidden_field :user_type,  :as => :hidden, :value => "C" %>
                                      <%= f.submit "Sign up", class:"btn btn-success" %>
                                      </hr>
                                      <%= render "devise/shared/links" %>
                                     
                                     
                                      
                                     
                                    
                                    
                                    </form>
                            </div>
                           
                        </div>
                    </div>
                
                <% end %>
        </div>
       
    